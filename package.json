{
  "name": "relay-stats-app",
  "version": "1.0.0",
  "description": "Analyze your Relay Bridge cross-chain transactions",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "build": "npm run lint && npm run test",
    "docker:build": "docker build -t relay-stats-app .",
    "docker:run": "docker run -p 3000:3000 relay-stats-app",
    "logs": "tail -f logs/combined.log",
    "cache:clear": "rm -rf cache/*",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "relay",
    "bridge",
    "crypto",
    "cross-chain",
    "defi",
    "blockchain"
  ],
  "author": "Love_4_Crypto",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "node-schedule": "^2.1.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "eslint": "^8.35.0",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Love4crypto/relay-stats-app.git"
  },
  "bugs": {
    "url": "https://github.com/Love4crypto/relay-stats-app/issues"
  },
  "homepage": "https://github.com/Love4crypto/relay-stats-app#readme"
}